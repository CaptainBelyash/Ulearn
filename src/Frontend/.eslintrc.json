{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "overrides": [
    {
      "rules": {
        "no-mixed-spaces-and-tabs": 0
      },
      "files": [
        "src/**/*.{ts,tsx}",
        "global.d.ts"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": "."
      },
      "plugins": [
        "@typescript-eslint"
      ]
    }
  ]
}
